{% extends 'PackageTaskBundle::base.html.twig' %}

{% block title %}
    {{ 'Statuses'|trans }}
{% endblock %}
{% block body %}
    {{ parent() }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ status.name }}</td>
                <td>
                    <a class="btn btn-sm" href="{{ path('PackageTaskBundle:Status:Edit', {'id':status.id}) }}">{{ 'Edit'|trans }}</a>
                    {% if status.getTasks.count == 0 %}
                        <a class="btn btn-sm" href="{{ path('PackageTaskBundle:Status:Remove', {'id':status.id}) }}">{{ 'Delete'|trans }}</a>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}