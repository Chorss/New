{% extends 'PackageTaskBundle::base.html.twig' %}

{% block title %}
    {{ 'Statuses'|trans }}
{% endblock %}
{% block body %}
    {{ parent() }}
    <article>
        <a href="{{ path('PackageTaskBundle:Status:Add') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Name'|trans({}, 'messages'), 's.name')|raw }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Description'|trans({}, 'messages'), 's.description')|raw }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for status in pagination %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>{{ status.name }}</td>
                    <td>{{ status.description }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('PackageTaskBundle:Status:Edit', {'id':status.id}) }}">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-sm" href="{{ path('PackageTaskBundle:Status:Remove', {'id':status.id}) }}">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </article>
{% endblock %}