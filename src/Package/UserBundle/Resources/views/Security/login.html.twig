{% extends 'PackageTaskBundle::base.html.twig' %}

{% block title %}
    {{ 'Login'|trans }}
{% endblock %}
{% block body %}
    {{ parent() }}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {{ form(form, {'action': path('_check_path')}) }}
    <a href="{{ path('PackageUserBundle:Security:RememberPassword') }}">{{ 'Remind password'|trans }}</a>
{% endblock %}