{# base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} - TODO</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
                '@PakietTaskBundle/Resources/public/css/bootstrap.css'
                '@PakietTaskBundle/Resources/public/css/bootstrap-theme.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top navbar-inverse" >
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Przełącz nawigację</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('PakietTaskBundle:Task:Index') }}">TODO</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav ">
                        <li><a href="{{ path('PakietTaskBundle:Task:Index') }}">Task</a></li>
                        <li><a href="{{ path('PakietTaskBundle:Status:Index') }}">Status</a></li>
                        <li><a href="{{ path('PakietTaskBundle:Priorities:Index') }}">Priorities</a></li>
                        <li><a href="{{ path('PakietTaskBundle:Labels:Index') }}">Labels</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            {% block body %}
                <div class="row">
                    {% for type,messages in app.session.flashbag.all() %}
                        {% for msg in messages %}
                            <div class="alert alert-{{ type }}">{{ msg }}</div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endblock %}
        </div>
        {% block javascripts %}
            {% javascripts
                '@PakietTaskBundle/Resources/public/js/jquery.js'
                '@PakietTaskBundle/Resources/public/js/bootstrap.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>